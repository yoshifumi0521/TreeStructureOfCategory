<%= form_tag(:search_experts) do %>
 
  <p><%= submit_tag "検索" %></p>

  <ul>
    <% @parents.each do |parent| %>
    
      <li>
        <span style="color: blue"><strong><%= parent.name =%></strong></span>
 
        <!-- ここは管理画面のみだけに表示 -->　
        <!--
        <%= link_to "編集",[:edit,parent] =%> 
        <%= link_to "削除",parent,method: :delete =%> 
        -->

      </li>
        <% parent.children.each do |child| %>
         
            <!--
            <label>
              <input type="checkbox" name="category" value="<%= child.id %>" > 
              <%= child.name %>
            </label>
            -->
            
            <label>
              <%= hidden_field_tag 'children[][id]', child.id %>
              <%= check_box_tag 'children[][flag]' %>
              <%= child.name %>
            </label>

            <!-- ここは管理画面のみだけに表示 -->　
            <!--
            <%= link_to "編集",[:edit,child] =%>
            <%= link_to "削除",child,method: :delete =%>
            -->

        <% end %>
  
    <% end %>
  </ul>

<% end %>



